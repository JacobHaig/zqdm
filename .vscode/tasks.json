{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-release",
            "type": "shell", 
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=ReleaseFast"
            ],
            "group": "build"
        }
    ]
}